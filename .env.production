# Production Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_PASSWORD=your-strong-database-password
DATABASE_URL="postgresql://shakn_user:${DATABASE_PASSWORD}@postgres:5432/shakn_db?schema=public"

# NextAuth.js
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-very-long-and-secure-nextauth-secret-key"

# JWT Secret
JWT_SECRET="your-very-long-and-secure-jwt-secret-key"

# Site Configuration
SITE_URL="https://your-domain.com"
ADMIN_EMAIL="admin@your-domain.com"

# Telegram Bot (for contact form notifications)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# WhatsApp & Telegram (for contact buttons)
NEXT_PUBLIC_WHATSAPP_NUMBER="905551234567"
NEXT_PUBLIC_TELEGRAM_USERNAME="yourusername"

# Email (optional - for SMTP email sending)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"